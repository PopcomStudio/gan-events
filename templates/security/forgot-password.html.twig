{% extends 'security/base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}
{% block form_title %}Mot de passe oublié{% endblock %}

{% block form_body %}

    <p class="small">
        Saisissez votre adresse e-mail. Un lien de réinitialisation vous sera adressé
        si un compte est associé à cette adresse.
    </p>

    {{ form_start(requestForm) }}
    {{ form_row(requestForm.email) }}
    <button class="btn btn-secondary w-100" type="submit">Envoyer</button>
    {{ form_end(requestForm) }}

{% endblock %}
