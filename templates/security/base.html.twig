{% extends 'base.html.twig' %}

{% block body_class %}login{% endblock %}

{% block body %}

    <div class="container">
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9 my-5">

                <div class="mb-3">
                    <div class="container d-flex justify-content-between">
                        <a href="{{ path('app_login') }}">
                            <img src="{{ asset('assets/images/logo-gan.png') }}" alt="Gan Assurances" class="img-fluid" />
                        </a>
                    </div>
                </div>

                <div class="card overflow-hidden border-0 shadow-lg">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row no-gutters">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-4">

                                    {% if block('form_title') %}
                                    <h1 class="display-4 separator mb-4">
                                        {% block form_title %}{% endblock %}
                                    </h1>
                                    {% endif %}

                                    {% include '_partial/alert.html.twig' with {flashes: app.flashes} only %}

                                    {% block form_body %}{% endblock %}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

{% endblock %}