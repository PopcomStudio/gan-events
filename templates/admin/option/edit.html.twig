{% extends 'admin/base.html.twig' %}

{% block content %}
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h1 class="h5 fw-bold text-dark mb-0">
                {{ option.displayName }}
            </h1>
            <a href="{{ path('option_index')}}">
                <i class="fas fa-arrow-alt-circle-left me-2"></i>
                <span class="sr-only">Retour à l'événement</span>
            </a>
        </div>

        {{ form_start(form) }}

        <div class="card-body">
            {% include '_partial/alert.html.twig' with {flashes: app.flashes} only %}
            {{ form_row(form.data) }}
        </div>

        <div class="card-footer text-right">
            <button type="submit" class="btn btn-primary">
                <i class="far fa-save me-1"></i> Enregister
            </button>
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('tinymce') }}
{% endblock %}